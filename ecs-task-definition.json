{
  "family": "fusion-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::216430538400:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "fusion",
      "image": "<216430538400>.dkr.ecr.<us-east-2>.amazonaws.com/fusion:latest",
      "portMappings": [
        { "containerPort": 80, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "DB_HOST", "value": "${{ secrets.DB_HOST }}" },
        { "name": "DB_NAME", "value": "${{ secrets.DB_NAME }}" },
        { "name": "DB_USER", "value": "${{ secrets.DB_USER }}" },
        { "name": "DB_PASS", "value": "${{ secrets.DB_PASS }}" }
      ],
      "essential": true
    }
  ]
}
